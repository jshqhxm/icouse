<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">@color/pink_base</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/pink_base</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">@color/pink_base_dark</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <!--android底色-->
        <!--<item name="android:windowBackground">@color/window_background</item>-->
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <!--<style name="Animation" parent="@android:style/Animation">-->
    <!--&lt;!&ndash;窗体进入动画&ndash;&gt;-->
    <!--<item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>-->
    <!--&lt;!&ndash;窗体退出动画&ndash;&gt;-->
    <!--<item name="android:windowExitAnimation">@android:anim/slide_in_left</item>-->
    <!--</style>-->

    <!--侧滑透明-->
    <style name="TranslucentTheme" parent="AppTheme">
        <!--theme透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--状态栏透明 DrawerLayout-->
    <style name="TranslucentStatusTheme" parent="AppTheme">
        <!--状态栏透明-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--状态栏透明 DrawerLayout-->
    <style name="TranslucentNavigationTheme" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="progressBarColor">
        <item name="colorAccent">@color/pink_base</item>
    </style>







    <!--播放器控件 -->
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
